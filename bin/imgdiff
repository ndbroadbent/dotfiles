#!/bin/bash

if [[ -f "$1" ]] && [[ -f "$2" ]]; then
  echo
  echo "-----------------------------------------------"
  echo "File: $1"
  echo "     Before     |     Diff     |     After"
  compare "$2" "$1" png:- | montage -geometry +4+4 "$2" - "$1" png:- | ~/.iterm2/imgcat
else
  if [[ -f "$1" ]]; then
    echo "+ Image Added"
    ~/.iterm2/imgcat "$1"
  elif [[ -f "$1" ]]; then
    echo "- Image Removed"
    ~/.iterm2/imgcat "$2"
  else
    echo "No images provided."
  fi
fi

exit 0
