#!/bin/bash

if [[ -f "$1" ]] && [[ -f "$2" ]]; then
  echo
  echo "-----------------------------------------------"
  echo "File: $1"
  echo "     Before     |     Diff     |     After"
  compare "$2" "$1" png:- | montage -geometry +4+4 "$2" - "$1" png:- | imgcat
else
  if [[ -f "$1" ]]; then
    echo "+ Image Added"
    imgcat "$1"
  else
    echo "- Image Removed"
    imgcat "$2"
  fi
fi

exit 0
